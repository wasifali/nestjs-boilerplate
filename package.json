{
  "name": "nestjs-boilerplate",
  "version": "1.0.0",
  "description": "NestJs Boilerplate!",
  "author": "Afzaal & Wasif",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug",
    "start:prod": "node dist/main",
    "lint": "npx eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "npx eslint --fix './src/**/*.{ts,tsx}'",
    "test": "jest --clearCache && jest",
    "test:watch": "jest --clearCache && jest --watch",
    "test:cov": "jest --clearCache && jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.10.13",
    "@nestjs/core": "^6.10.13",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.10.13",
    "@nestjs/platform-socket.io": "^6.10.13",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/websockets": "^6.10.13",
    "bcrypt": "^3.0.6",
    "build-url": "^1.3.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongodb-session": "^2.2.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.17.0",
    "google-auth-library": "^5.5.1",
    "handlebars": "^4.5.3",
    "hashids": "^2.0.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "match-all": "^1.2.5",
    "mongoose": "^5.7.6",
    "morgan": "^1.9.1",
    "nestjs-redis": "^1.2.3",
    "passport": "^0.4.0",
    "passport-custom": "^1.1.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-mock": "0.0.3",
    "passport-slack": "0.0.7",
    "qs": "^6.9.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "superagent-mock": "^3.7.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/mailgun-js": "^0.22.3",
    "@types/prettier": "^1.15.2",
    "@types/hapi__joi": "^16.0.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/passport-local": "^1.0.33",
    "@types/qs": "^6.5.3",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "mockingoose": "^2.13.2",
    "npx": "^10.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
